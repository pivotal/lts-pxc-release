#!/usr/bin/env bash

set -eu

source /var/vcap/packages/golang-1.9-linux/bosh/compile.env
mkdir -p ${BOSH_INSTALL_TARGET}/bin
mkdir -p ${GOPATH}/src

mv github.com ${GOPATH}/src

go build -o ${BOSH_INSTALL_TARGET}/bin/proxy github.com/pivotal/lts-switchboard

cp -r src/github.com/pivotal/lts-switchboard/static  ${BOSH_INSTALL_TARGET}/static
